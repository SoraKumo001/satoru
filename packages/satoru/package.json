{
  "name": "satoru",
  "version": "1.0.0",
  "description": "HTML/CSS to SVG converter via Wasm (Skia + litehtml)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "workerd": {
        "types": "./dist/workerd.d.ts",
        "import": "./dist/workerd.js"
      },
      "single": {
        "types": "./dist/single.d.ts",
        "import": "./dist/single.js"
      },
      "types": "./dist/index.d.ts",
      "import": "./dist/single.js",
      "default": "./dist/single.js"
    },
    "./workerd": {
      "types": "./dist/workerd.d.ts",
      "import": "./dist/workerd.js"
    },
    "./workers": {
      "types": "./dist/workers.d.ts",
      "import": "./dist/workers.js"
    },
    "./single": {
      "types": "./dist/single.d.ts",
      "import": "./dist/single.js"
    },
    "./satoru.js": "./dist/satoru.js",
    "./satoru.wasm": "./dist/satoru.wasm"
  },
  "typesVersions": {
    "*": {
      "workerd": [
        "./dist/workerd.d.ts"
      ],
      "single": [
        "./dist/single.d.ts"
      ],
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "worker-lib": "2.0.8"
  }
}
